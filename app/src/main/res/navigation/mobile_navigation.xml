<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_fresh">

    <fragment
        android:id="@+id/navigation_allowed"
        android:name="de.batram.dnsstrolch.ui.allowed.AllowedFragment"
        android:label="@string/title_allowed" />

    <fragment
        android:id="@+id/navigation_fresh"
        android:name="de.batram.dnsstrolch.ui.fresh.FreshFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_fresh" />

    <fragment
        android:id="@+id/navigation_ignored"
        android:name="de.batram.dnsstrolch.ui.ignored.IgnoredFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_ignored" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="de.batram.dnsstrolch.ui.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>
